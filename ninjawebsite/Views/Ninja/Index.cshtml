@model IEnumerable<NinjaViewModel>
<div class="container mx-auto px-4 flex justify-between align-self-center items-center mb-4">
    <h1 class="text-2xl font-bold mb-6 text-center text-white">Ninja's</h1>
    <div class="flex items-center justify-between p-4">
        <a href="/Ninja/Create" class="text-white bg-blue-800 hover:bg-blue-700 font-bold py-2 px-4 rounded shadow-md">
            + Add Ninja
        </a>
    </div>
</div>
<div class="flex flex-wrap justify-center align-items-center gap-4 p-4">
    @foreach (var ninja in Model)
    {
        <div class="relative max-w-lg p-8 item-card  rounded-lg shadow ">
            <button onclick="confirmDelete('@ninja.Id')" class="absolute top-4 right-4 text-gray-500 hover:text-red-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>

            <a asp-action="Details" asp-route-id="@ninja.Id">
                <h5 class="mb-4 text-3xl font-bold tracking-tight text-center">@ninja.Name</h5>
            </a>

            <p class="mb-6 text-lg font-normal text-gray-700 text-center">Gold: @ninja.Gold</p>

            <div class="flex justify-center space-x-4">
                <a asp-action="Details" asp-route-id="@ninja.Id" class="inline-flex items-center px-6 py-3 text-lg font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300">
                    Show Ninja
                    <svg class="rtl:rotate-180 w-4 h-4 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
                    </svg>
                </a>

                <a asp-action="Edit" asp-route-id="@ninja.Id" class="inline-flex items-center px-6 py-3 text-lg font-medium text-center text-white bg-blue-400 rounded-lg hover:bg-blue-300 focus:ring-4 focus:outline-none focus:ring-blue-200">
                    Edit Ninja
                    <svg class="rtl:rotate-180 w-4 h-4 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
                    </svg>
                </a>
            </div>
        </div>
    }
</div>

<script>
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete this ninja?")) {
            window.location.href = `/Ninja/Delete/${id}`;
        }
    }
</script>
