@model NinjaViewModel
<div class="flex flex-col items-center p-4">
    <div class="text-center mb-4">
        <p><strong>Ninja:</strong> Shadow Warrior</p>
        <p><strong>Gold in wallet:</strong> @Model.Gold </p>
        <p><strong>Total Strength:</strong> 300</p>
        <p><strong>Total Agility:</strong> 500</p>
        <p><strong>Total Intelligence:</strong> -200</p>
        <p><strong>Gear Value:</strong> 2500</p>
    </div>

    <div class="flex justify-center items-center space-x-4">
        <div class="space-y-4">
            <div class="p-4 border-2 border-black bg-white shadow-lg">
                <p><strong>Head:</strong> Mighty Helmet</p>
                <p>Strength: 10</p>
                <p>Agility: 50</p>
                <p>Intelligence: -100</p>
            </div>
            <div class="p-4 border-2 border-black bg-white shadow-lg">
                <p><strong>Hands:</strong> Iron Gauntlets</p>
                <p>Strength: 20</p>
                <p>Agility: 10</p>
                <p>Intelligence: 0</p>
            </div>
