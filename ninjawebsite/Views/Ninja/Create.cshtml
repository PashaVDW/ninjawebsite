@model NinjaViewModel
<div class="flex justify-center items-center">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold mb-6 text-center">Add New Ninja</h2>
        
        <form asp-action="CreateNinja" method="post">
            <div class="mb-4">
                <label for="Name" class="block text-gray-700 font-bold mb-2">Name:</label>
                <input asp-for="Name" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter ninja name" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label for="Gold" class="block text-gray-700 font-bold mb-2">Gold:</label>
                <input asp-for="Gold" min="0" type="number" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value="100" placeholder="Enter starting gold" />
                <span asp-validation-for="Gold" class="text-red-500 text-sm"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">
                    Create Ninja
                </button>
            </div>
        </form>
    </div>
</div>
